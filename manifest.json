{
  "name": "Tweet Recommender",
  "description": "This extension only works for participants of the Tweet Recommender study.",
  "version": "2.1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
   {
     "matches": ["*://*.twitter.com/*"],
     "js":  ["js/jquery-3.6.0.min.js", "firebase-app.js", "firebase-firestore.js", "misinfo_tweets.js", "assignments.js", "feed.js"],
     "run_at": "document_end"
   }
 ],
  "permissions": ["storage", "webNavigation", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/favicon-16x16.png",
      "32": "/images/favicon-32x32.png",
      "96": "/images/favicon-96x96.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "images/*.png"],
      "matches": [ "*://twitter.com/*" ]
    }, 
    {
      "resources": [ "js/*.js"],
      "matches": [ "*://twitter.com/*" ]
    }
  ]
}
